[user]
	name = David Corcoran
	email = 44246360+ArcaneIRE@users.noreply.github.com
	signingkey = /home/arcane/.ssh/id_ed25519.pub
[branch]
    sort = -committerdate
[color]
	ui = auto
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[column]
    ui = auto
[commit]
    verbose = true
[core]
	editor = code --wait
[credential "https://dev.azure.com"]
	useHttpPath = true
[fetch]
    prune = true
    pruneTags = true
    all = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[pull]
    rebase = true
[push]
    autoSetupRemote = true
    followTags = true
[init]
	defaultBranch = main
[pager]
	branch = false
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[tag]
    sort = version:refname
